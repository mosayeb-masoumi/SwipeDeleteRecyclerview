<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="#F8ACAC">
            <TextView
                android:id="@+id/delete_right"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/img_delete_right"
                android:text="DELETE" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_delete_right"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete_sweep"/>


        <TextView
            android:id="@+id/deleteleft"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_delete_left"
            android:text="DELETE" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_delete_left"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_delete_sweep"/>

    </RelativeLayout>



    <RelativeLayout
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="#f9f0f0"
    >
    <TextView
    android:id="@+id/title"
    android:gravity="center_vertical"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>